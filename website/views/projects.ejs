<%- include('header') -%>
  <main class="px-3">
    <div class="container mt-2">
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Animáció megnevezése</th>
          <th scope="col">Mappa elérése</th>
          <th colspan=4>Funkciók</th>
        </tr>
      </thead>
      <tbody>
        <% projects.forEach(function(egyproject){ %>
        <tr>
          <th scope="row"><%= egyproject.name %></th>
          <td style="<% if (egyproject.active == 1) { %> color:blue <% } else { %> " " <% }; %>"><%= egyproject.folder %></td>
          <td><a href="/project/del/<%= egyproject._id %>"><i class="fas fa-trash-alt" style="color:#f63900"></i></a></td>
          <td><a href="/project/edit/<%= egyproject._id %>"><i class="fas fa-edit" style="color:#f63900"></i></a></td>
          <td><a href="/project/activate/<%= egyproject._id %>"><i class="fas fa-play" style="color:#f63900"></i></a></td>
          <td><a href="/project/deactivate/<%= egyproject._id %>"><i class="fas fa-stop" style="color:#f63900"></i></a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <p class="lead">
      <a href="/project/new" class="btn btn-lg btn-secondary fw-bold border-white bg-white">Új hozzáadása</a>
    </p></div>
  </main>

  <%- include('footer') -%>

