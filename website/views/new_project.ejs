<%- include('header') -%>
<main class="px-3">
  <div class="container mt-4 text-center" > 
    <form method="POST">
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Megnevezés:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="name" name="name" <% if (typeof project === 'undefined') { %> placeholder="Vakcinainfó 2 - Eletric Boogaloo" <% } else { %> value="<%= project.name %>" <% }; %>>
        </div>
      </div>
      <div class="form-group row mt-3">
        <label for="employeelist" class="col-sm-2 col-form-label">Mappa</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="folder" name="folder" <% if (typeof project === 'undefined') { %> placeholder="./1" <% } else { %> value="<%= project.folder %>" <% }; %>>
        </div>
      </div>
      <input type="submit" class="btn btn-lg btn-secondary fw-bold border-white bg-white mt-4" value="<%= (typeof project === 'undefined') ? 'Új hozzáadása' : 'Módosítás' %>"/>
    </form>
  </div> 
</main>
<%- include('footer') -%>

